<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FruitDetectionNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/BottomNavSelected</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FruitDetectionNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.FruitDetectionNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FruitDetectionNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonTheme</item>

        <!-- enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/pink</item>
        <item name="iconTint">@color/pink</item>
    </style>

    <!-- Style to define the tint color of the overflow menu button -->
    <style name="OverflowButtonTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black2</item>
    </style>

    <!-- Style to define a custom action bar theme -->
    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/white1</item>
        <item name="colorPrimaryDark">@color/black3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_clear</item>
    </style>

    <!-- Style to define the text color in Preferences -->
    <style name="AppTheme.Preferences" parent="AppTheme.ActionBar">
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <!-- Style for search bar -->

    <!-- Action Mode action bar style -->
    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/black1</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>